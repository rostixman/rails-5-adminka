<% content[:model] ||= nil %>

<% unless content[:model].nil? %>
	<% if content[:model].errors.any? %>
		<!-- ERRORS -->
		<div id="error_explanation">
			<h2><%= I18n.t('validate_errors.error', count: content[:model].errors.count) %></h2>

			<ul>
				<% content[:model].errors.full_messages.each do |message| %>
					<li><%= message %></li>
				<% end %>
			</ul>
		</div>
	<% end %>
<% end %>