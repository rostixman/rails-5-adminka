/**
 * @desc инициализация функции
 */
var input_password__<%= id %>__init = function(){

	/**
	 * следим за изменением поля с паролем
	 **/
	$('#<%= id %>').on('keyup', function(event) {

		// инициализируем переменные
		var _this = $(this);

		if (_this.val().length > 0) {
			_this.rules("add", {
				minlength: 8,
				messages: {
					minlength: jQuery.validator.format("Длина пароля должна быть не менее 8 символов")
				}
			});
			_this.valid();
		} else {
			_this.rules("remove");
		}
	});

	/**
	 * показываем или скрываем поле с паролем
	 **/
	$('.<%= id %>_show-password-field').on('click', function(e){
		e.preventDefault();

		// инициализируем переменные
		var _this = $(this),
			parent = _this.parents('.form-group'),
			password_field = $('.<%= id %>_password-field');

		// разворачиваем поле
		parent.slideUp(300);
		password_field.slideDown(300);
	});
};
input_password__<%= id %>__init();